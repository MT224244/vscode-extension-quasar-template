{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "DOM"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}
